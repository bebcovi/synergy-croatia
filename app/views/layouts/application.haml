!!!
%html
  %head
    %title Synergy &middot; #{@title}
    %meta{:charset => 'utf-8'}
    %meta{:name => 'robots', :content => 'noindex'}
    %link{:href => 'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800|Gentium+Basic:400,700,400italic,700italic|Fredericka+the+Great&subset=latin-ext,latin', :rel => 'stylesheet', :type => 'text/css'}
    = favicon_link_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{:id => current_page_id}
    %header#header
      #logo= link_to 'Synergy Croatia', '/'
      #lang
        - if english?
          = link_to image_tag('lang/Croatia.png'), :locale => :hr
        - else
          = link_to image_tag('lang/United-States.png'), :locale => :en

    %nav
      %ol
        = list_of navigation_pages do |page|
          = link_to_unless_current page.title, page.route do
            = link_to page.title, page.route, :class => 'active'
          - if request.path == page.route or request.path =~ /trainings\/\d+/ and page.route == '/news'
            = content_for :navigation 

    %article{:role => 'main'}
      = yield

    %aside
      %section#mailchimp
        = render 'pages/mailchimp'
      %section#results
        %span.icon-group
        %h1 Rezultati polaznika
        %ul
          = list_of(['neka web stranica', 'ne≈°to drugo', 'blah']) do |item|
            = link_to item, '#'
