- url = @post.new_record? ? admin_posts_path : admin_post_path(@post)

= simple_form_for @post, url: url, defaults: {locale: :hr} do |f|

  = f.error_notification

  = f.input :title_hr
  = f.input :title_en
  = f.input :body_hr, input_html: {class: "big"}
  = f.input :body_en, input_html: {class: "big"}
  = f.input :expires_on, default: 1.month.from_now

  .form_actions
    = cancel_button "Odustani", admin_posts_path
    = f.button :submit, class: "btn_primary"
