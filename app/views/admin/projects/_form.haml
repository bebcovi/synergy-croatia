- url = @project.new_record? ? admin_projects_path : admin_project_path(@project)

= simple_form_for @project, url: url, defaults: {locale: :hr} do |f|

  .inner
    = f.input :name
    = f.input :category do
      = f.association :category, prompt: "Izaberi...", wrapper: false, label: false
      ili stvori #{link_to "novi", new_admin_category_path}.
    = f.input :country, priority: common_countries
    = f.input :city_hr
    = f.input :city_en
    = f.input :begins_on
    = f.input :ends_on
    = f.input :description_hr, input_html: {class: "big"}
    = f.input :description_en, input_html: {class: "big"}
    = f.input :summary_hr
    = f.input :summary_en
    = f.input :participating_countries, priority: common_countries, multiple: true, size: 10
    = f.input :age_restriction do
      #{f.number_field(:minimum_age)} â€“ #{f.number_field(:maximum_age)}
    = f.input :infoletter
    = f.input :application_form
    = f.input :deadline
    = f.input :available_space

  .controls
    = cancel_button "Odustani", admin_projects_path
    = f.button :submit
