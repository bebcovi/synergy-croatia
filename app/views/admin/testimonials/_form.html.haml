- url = @testimonial.new_record? ? admin_project_testimonials_path(params[:project_id]) : admin_testimonial_path(@testimonial)

= simple_form_for @testimonial, url: url, defaults: {locale: :hr} do |f|

  = f.error_notification

  = f.input :content_hr, input_html: {class: "big"}
  = f.input :content_en, input_html: {class: "big"}
  = f.input :author

  .form_actions
    = f.button :submit, class: "btn_primary"
    = cancel_button "Odustani", back
